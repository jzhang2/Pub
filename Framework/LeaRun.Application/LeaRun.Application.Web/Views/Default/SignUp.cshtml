    <script>
    //提示信息
        function formMessage(msg, type) {
            $('.regmsg').remove();
        var _class = "login_tips";
        if (type == 1) {
            _class = "login_tips-succeed";
        }
        $('#Regform').prepend('<div class="form-group regmsg" style="margin:0;"><div class="' + _class + ' col-sm-10 col-md-push-1"><i class="fa fa-question-circle"></i>' + msg + '</div></div>');
    }
    /*=========注册账户（begin）================================================================*/
    $(function () {
        //手机号离开事件
        $("#email").blur(function () {
            var search_str = /^[\w\-\.]+@@[\w\-\.]+(\.\w+)+$/;
            if ($(this).val() != "" && !search_str.test($(this).val())) {
                $(this).focus();
                formMessage('邮箱地址格式不正确,请输入正确格式的邮箱地址。');
            }
        });

        //注册按钮事件
        $("#btnregister").click(function () {
            var $account = $("#email");
            var $code = $("#txt_register_code");
            var $password = $("#pwd");
            var $cpwd = $("#cpwd");
            if ($account.val() == "") {
                $account.focus();
                formMessage('请输入邮箱地址。');
                return false;
            } else if ($code.val() == "") {
                $code.focus();
                formMessage('请输入邮箱验证码。');
                return false;
            } else if ($password.val() == "") {
                $password.focus();
                formMessage('请输入密码。');
                return false;
            } else if ($password.val()!=$cpwd.val()) {
                $cpwd.focus();
                formMessage('两次输入的密码不一致。');
                return false;
            } else {
                $("#btnregister").addClass('active').attr('disabled', 'disabled');
                //$("#btnregister").find('span').hide();
                $.ajax({
                    url: "/Default/Register",
                    data: { mobileCode: $account.val(), securityCode: $code.val(), password: $.md5($password.val()) },
                    type: "post",
                    dataType: "json",
                    success: function (data) {
                        if (data.type == 1) {
                            //alert('注册成功');
                            window.location.href = '/';
                        } else {
                            formMessage(data.message);
                            $("#btnregister").removeClass('active').removeAttr('disabled');
                            //$("#btnregister").find('span').show();
                            //$("#register_verifycode").trigger("click");
                        }
                    }
                });
            }
        })
        //获取验证码
        $("#register_getcode").click(function () {
            var $this = $(this);
            $this.attr('disabled', 'disabled');
            $.ajax({
                url: "/Default/GetSecurityCode",
                data: { mobileCode: $("#email").val() },
                type: "get",
                dataType: "json",
                async: false,
                success: function (data) {
                    if (data.type == 1) {
                        formMessage('验证码已发送到您的邮箱' + $("#email").val() + '请注意查收。', 1);
                    } else {
                        $this.removeAttr('disabled');
                        formMessage(data.message);
                    }
                }
            });
        });
    })
    /*=========注册账户（end）================================================================*/
    </script>
