@{
    ViewBag.Title = "西安地图出版社";
    ViewBag.navIndex = 0;
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@using LeaRun.Application.Entity.ExtendManage
@using LeaRun.Application.Entity.PublicInfoManage
@using LeaRun.Application.Web.Controllers
@using LeaRun.Util
@model LeaRun.Application.Web.Controllers.HomeViewModel
<script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=SRkUQaDbD9KVsHZGmikTgCG1"></script>
<aside id="fh5co-hero" clsas="js-fullheight">
    <div class="flexslider">
        <ul class="slides">
            @foreach (BannerNewsEntity entity in Model.BannerNewsList) {
                <li style="background-image: url('@entity.ImgPath');">
                    <a href="@entity.URL">
                        <div class="container">
                            <div class="col-md-12 text-center  fh5co-property-brief slider-text">
                                <div class="fh5co-property-brief-inner">
                                    <div class="fh5co-box">
                                        <h2>@entity.Title</h2>
                                        <h4>@entity.Description</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </li>
            }
        </ul>
    </div>
</aside>
<div id="quick-nav">
    <div class="container">
        <div class="row">
            <div class="header-quicknva">
                <ul>
                    <li class="col-xs-12-nav"><a class="regbtn btn" href="javascript:;">快速业务</a></li>
                    <li class="col-xs-6-nav">
                        <a href="/" class="active">
                            <img src="~/images/读者服务选中.png"/>
