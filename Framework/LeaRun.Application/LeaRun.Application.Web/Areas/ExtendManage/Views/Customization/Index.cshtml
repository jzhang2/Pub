@{
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 136.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        var queryJson = {
            TypeId: 1
        }
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../ExtendManage/Customization/GetPageListJson",
            postData: { queryJson: JSON.stringify(queryJson) },
            datatype: "json",
            colModel: [
                { label: 'CustomizationId', name: 'CustomizationId', index: 'CustomizationId', width: 100, align: 'left', sortable: true, hidden: true },
                { label: '客户姓名', name: 'FullName', index: 'FullName', width: 100, align: 'left', sortable: true },
                { label: '邮箱', name: 'Email', index: 'Email', width: 100, align: 'left', sortable: true },
                { label: '电话', name: 'Mobile', index: 'Mobile', width: 100, align: 'left', sortable: true },
                { label: '原型', name: 'Category', index: 'Category', width: 100, align: 'left', sortable: true },
                { label: '尺寸', name: 'Size', index: 'Size', width: 100, align: 'left', sortable: true },
                { label: '材质', name: 'Material', index: 'Material', width: 100, align: 'left', sortable: true },
                { label: '装裱形式', name: 'Frame', index: 'Frame', width: 100, align: 'left', sortable: true },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        $("#btn_Search").click(function () {
            var queryJson = {
                FullHead: $("#txt_Keyword").val(),
                TypeId: 1
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
            }).trigger('reloadGrid');
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加Customization',
            url: '/ExtendManage/Customization/Form',
            width: 'px',
            height: 'px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $("#gridTable").jqGridRowValue("CustomizationId");
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑Customization',
                url: '/ExtendManage/Customization/Form?keyValue=' + keyValue,
                width: 'px',
                height: 'px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $("#gridTable").jqGridRowValue("CustomizationId");
        if (keyValue) {
            $.RemoveForm({
                url: '../../ExtendManage/Customization/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的Customization！', 0);
        }
    }
</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td>
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                </td>
            </tr>
        </table>
    </div>
